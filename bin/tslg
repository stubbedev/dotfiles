#!/bin/bash

if [[ -d .git ]] || git rev-parse --git-dir > /dev/null 2>&1; then
  if command -v lazygit &> /dev/null; then
    if [[ -z "$TMUX" ]]; then
      lazygit
    fi
  elif command -v bit &> /dev/null; then
    if [[ -z "$TMUX" ]]; then
      bit
    fi
  else
    if [[ -z "$TMUX" ]]; then
      git status && git diff
    fi
  fi
else
  clear && exit 0
fi
