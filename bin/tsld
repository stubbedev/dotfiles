#!/bin/bash

function toggle_lazydocker {
	if command -v lazydocker &>/dev/null; then
		if [[ -z "$TMUX" ]]; then
			lazydocker
		else
			LAZYDOCKER_ALIVE=$(lazydocker)
			local LAZYDOCKER_ALIVE
			if [[ -z "${LAZYDOCKER_ALIVE}" ]]; then
				tmux kill-pane || exit 0
			fi
		fi
	else
		exit 0
	fi
}

toggle_lazydocker
