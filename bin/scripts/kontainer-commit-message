#!/bin/bash

# Get the current branch name
BRANCH_NAME="$(git branch --show-current | awk 'match($0, /[A-Z]+-[0-9]+/) { print substr($0, RSTART, RLENGTH) }')"
COMMIT_PREFIX="$(echo "$BRANCH_NAME" | sed -n 's|.*/\(KON-[0-9]*\).*|\1: |p')"
# Extract the dynamic part from the branch name
if [[ "$BRANCH_NAME" != "" ]]; then
  echo "$COMMIT_PREFIX :"
else
  echo ""
fi
