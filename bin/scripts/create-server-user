#!/usr/bin/env bash

sudo useradd -m stubbe
sudo passwd stubbe
sudo usermod -aG sudo stubbe
sudo usermod --shell /bin/bash stubbe

sudo groupadd docker 2>/dev/null || true
sudo usermod -aG docker stubbe

echo "stubbe ALL=(ALL) NOPASSWD:ALL" | sudo tee /etc/sudoers.d/stubbe
sudo chmod 0440 /etc/sudoers.d/stubbe

sudo echo "" > /etc/motd

