#!/bin/bash

function info {
	echo "Welcome to the STUBBEDEV CLI"
	echo
	echo "Please provide an input for the desired option."
	echo "Options:"
	echo "1.       Edit User Secrets"
	echo "2.       Edit User Aliases"
	echo "3.       Edit User Functions"
	echo "4.       Edit User Paths"
	echo "5.       Edit User Settings"
	echo "6.       Edit ST Config Headers"
	echo "7.       Recompile ST"
}

function recompile_st {
	cd "$HOME/.stubbe/src/st" || exit
	sudo make clean install
	cd || exit
}

case "$1" in
1 | secrets | secret)
	sudo $EDITOR "$HOME/.stubbe/src/zsh/secrets"
	exit
	;;
2 | aliases | alias)
	sudo $EDITOR "$HOME/.stubbe/src/zsh/aliases"
	exit
	;;
3 | functions | func)
	sudo $EDITOR "$HOME/.stubbe/src/zsh/funcs"
	exit
	;;
4 | paths | path)
	sudo $EDITOR "$HOME/.stubbe/src/zsh/paths"
	exit
	;;
5 | settings | sett)
	sudo $EDITOR "$HOME/.stubbe/src/zsh/settings"
	exit
	;;
6 | stconf | st)
	sudo $EDITOR "$HOME/.stubbe/src/st/config.h"
	exit
	;;
7 | recompile | recomp)
	recompile_st
	exit
	;;
*)
	info
	exit
	;;
esac
