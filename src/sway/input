# Sway Input Configuration
# Converted from Hyprland settings.conf

# Keyboard configuration
input type:keyboard {
    repeat_delay 300
    repeat_rate 50
    xkb_layout us,dk,es
    xkb_options grp:toggle
}

# Mouse configuration - disable acceleration
input type:pointer {
    accel_profile flat
}

# Touchpad configuration
input type:touchpad {
    middle_emulation enabled
    click_method clickfinger
    drag enabled
    drag_lock enabled
    tap enabled
    accel_profile flat
}