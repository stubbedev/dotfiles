# Sway configuration
# Based on Hyprland configuration

# Include other config files
include ~/.config/sway/env
include ~/.config/sway/variables
include ~/.config/sway/keybinds
include ~/.config/sway/theme
include ~/.config/sway/startup
include ~/.config/sway/output
include ~/.config/sway/input
include ~/.config/sway/window_rules

# Basic settings
default_border pixel 0
default_floating_border pixel 0
gaps inner 0
gaps outer 0
focus_follows_mouse no
mouse_warping none
focus_on_window_activation none

# Layout settings
default_orientation auto
workspace_layout default

# Disable window decorations
for_window [class=".*"] border pixel 0

# Set mod key to Super
set $mod Mod4