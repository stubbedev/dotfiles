# HTML - Plain text conversion (default auto_view)
text/html; w3m -I %{charset} -T text/html -dump -o display_link_number=1 -o color=1 %s; nametemplate=%s.html; copiousoutput

# HTML - Open in w3m in terminal (press Ctrl+v on HTML part)
text/html; w3m -I %{charset} -T text/html -o display_link_number=1 -o color=1 -o auto_image=1 -o inline_img_protocol=4 %s; needsterminal

# HTML - Open in browser (press Ctrl+v again or use 'v' to view attachments)
text/html; xdg-open %s; test=test -n "$DISPLAY"; needsterminal=no
