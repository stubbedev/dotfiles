#!/bin/bash
# EXPAND LIST WITH DESIRED PATHS
STUBBE_PATHS=(
	"$HOME/.stubbe/bin"
	"$HOME/.local/bin"
	"$HOME/.config/composer/vendor/bin"
	"$HOME/.nimble/bin"
	"$HOME/.bun/bin"
	"$HOME/.deno/bin"
	"$HOME/.cargo/bin"
	"$HOME/go/bin"
)

# ASSIGN PATH EXPORTS IN LOOP

for STUBBE_PATH in "${STUBBE_PATHS[@]}"; do
	if [ -d "$STUBBE_PATH" ] && [[ ! ":$PATH:" == *":$STUBBE_PATH:"* ]]; then
		export PATH="$PATH:$STUBBE_PATH"
	fi
done
